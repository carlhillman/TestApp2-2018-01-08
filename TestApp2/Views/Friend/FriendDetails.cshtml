    <!--post script -->
    <script>
        function SendPost()
        {
        var text = $('#Text').val();
        var Sender = '@User.Identity.GetUserId()';
        var Receiver = '@Model.Id';
        var newPost = { From: Sender, To: Receiver, Text: text };

            $.ajax({
                type: 'POST',
                url: '/api/Posts/',
                data: JSON.stringify(newPost),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $('#Text').val('');
                    UpdatePosts();
                },
                error: function (data) {
                    alert("error");
                }
            });
        };


        function UpdatePosts()
        {
            var id = '@Model.Id'

            $.ajax({
                type: "GET",
                url: "/Friend/GetPosts/" + id,
                success:
                function (html)
                {
                    $("#postDiv").html(html);
                },
                error:
                function ()
                {
                    alert("error");
                }
            });
        };

    </script>
